<!DOCTYPE html>
<html lang="en">

<head>
    <!-- <style> -->
    <link rel="stylesheet" href="libraryuser1.css">     
    <!-- </style> -->
   
    <meta charset="UTF-8">
   
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>管理书目</title>
</head>

<body>
    <div >
        <ol id="navbar">
            <li id="home" class="page">首页</li>
            <li ><form action="" id="search-f">
                <input type="text" name="" id="search" placeholder="搜索" value="">
            
            </form></li>
            <a href="/logout"> <li id="logout" class="page">退出</li></a>
        </ol>
    </div>
    <div class="full">

        <div id="top">
            <div>

                <header>
                    馆存<span>书籍</span>清单
                </header>
            </div>
        </div>

        <div id="main">
            
            <div id="form">
                
                <p id="msg"></p>
                <form action="libraryuser.ejs" id="books" method="post">
                    <label for="title">书名</label>
                    <br>
                    <input type="text" id="title" name="title" value="" >
                    <br>
                    <label for="Author">作者</label>
                    <br>
                    <input type="text" id="Author" name="author" value="">
                    <br>
                    
                    <label for="ISBN#">ISBN#</label>
                    <br>
                    <input type="number" id="ISBN#" name="isbn" value="">
                    <br>
                     
                     <label for="link">添加链接</label>
                    <br>
                    <input type="text" id="link" name="link" value="">
                    <br> <br>
                    <input type="submit" value="addBook">
                    
                </form>
            </div>
                
        </div>

        <div id="display">
            <table id="tb">
                <tr>

                    <th class="th">书名</th>
                    <th class="th">作者</th>
                    <th class="th">ISBN</th>
                    <th class="th">书籍链接</th>
                    <th class="th">删除</th>
                </tr>
                <% if(datas!=null) { %>
                    <% datas.forEach(function(item){ %>
                        <tr>
                            <td class="td"><%= item.title%></td>
                            <td class="td"><%= item.author %></td>
                            <td class="td"><%= item.isbn%></td>
                            <td class="td"><a id="downld" href="<%= item.link %>">Download</a></td>    
                            <td class="td"> <a href="/delete/<%=item._id %>"> <button class="remove"> X </button></a></td>
                        </tr>
                    <% }) %>    
                <% } %>        
               
                


            </table>
        </div>
    </div>
    <script src="libraryuser.js"></script>
    
</body>

</html>